<div class="errors-font">

<% if current_team.errors.any? %>
  <br><br><%= current_team.errors.full_messages.to_sentence %>
<% end %>

</div>

<style>

    h6 {
        font-size: 70px;
    }
</style>

<h6 style="color:yellow"><%= @baby_name.name %></h6>

<%= form_with model: @baby_name do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br><br><br><br>
    <%= f.label :origin, "What is the origin of this name?" %><br>
    <%= f.text_field :origin %><br><br><br>
    <%= f.label :meaning, "What about the meaning?" %><br>
    <%= f.text_area :meaning %><br><br><br>
    <%= f.label :gender, "Is this name primarily used for boys or girls?" %><br><h3> 
    <%= f.radio_button :gender, "Male" %>Boys
    <%= f.radio_button :gender, "Female"%> Girls
    <%= f.radio_button :gender, "Baby"%> Both </h3><br><br>
    <%= f.label :variations, "Are there any variations of this name? (separate variations with a comma)" %><br><br>
    <%= f.text_area :variations %><br><br><br>

    <%= f.submit :class => "button2" %><br><br><br>
<% end %>